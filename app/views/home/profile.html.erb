<h1>Answers given by <%=@user.email%></h1>
<ul>
<%@answers.each do |a|%>
	<%@questions.each do |q|%>
		<%if a.question_id == q.id%>
			<li>Q.<%=q.content%></li>
		<%end%>	
	<%end%>
	<%=a.content%>
<%end%>	
</ul>
<h2>Follow <%=@user.email%></h2>
		<% unless @user.followers.pluck(:id).include?(current_user.id) %>
             <%= link_to "Follow" ,  url_for(controller: :home, action: :follow, followee_id: @user.id), method: :post %>
        <% else %>
             <%= link_to "Un Follow" , url_for(controller: :home, action: :follow, followee_id: @user.id), method: :post %>
        <% end %>


